<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#FFFFFF"
	android:id="@+id/Splash"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical">

	<RelativeLayout
		android:id="@+id/Splash_1"
		android:background="#FFFFFF"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:layout_gravity="bottom|center_vertical"
		android:visibility="visible">

		<ImageView
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:src="@drawable/splash"
			android:layout_gravity="center|center_vertical|center_horizontal"
			android:layout_centerVertical="false"
			android:id="@+id/SplashIcon"
			android:layout_marginTop="41dp"/>

		<TextView
			android:layout_height="wrap_content"
			android:text="Welcome!"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="match_parent"
			android:layout_below="@id/SplashIcon"
			android:textAlignment="center"
			android:textColor="#000000"
			android:gravity="center"
			android:id="@+id/SplashWelcome"
			android:layout_marginTop="33dp"/>

		<Button
			android:layout_height="wrap_content"
			android:text="NEXT &gt;&gt;"
			android:layout_width="wrap_content"
			android:alpha="0.8"
			android:gravity="center|center_vertical|center_horizontal"
			android:layout_alignParentRight="true"
			android:layout_marginBottom="10dp"
			android:layout_marginRight="6dp"
			android:id="@+id/SplashNext"
			android:textColor="#FDFDFD"
			android:paddingLeft="24dp"
			android:textAlignment="center"
			android:paddingRight="24dp"
			android:layout_alignParentBottom="true"
			android:background="@drawable/button"/>

	</RelativeLayout>

	<RelativeLayout
		android:layout_height="match_parent"
		android:layout_width="wrap_content"
		android:id="@+id/Splash_2"
		android:gravity="center"
		android:visibility="gone">

		<Button
			android:layout_height="wrap_content"
			android:text="START"
			android:alpha="0.8"
			android:layout_width="wrap_content"
			android:gravity="center|center_vertical"
			android:layout_centerHorizontal="true"
			android:id="@+id/SplashButton"
			android:textColor="#FFFFFF"
			android:paddingLeft="24dp"
			android:paddingRight="24dp"
			android:visibility="visible"
			android:background="@drawable/button"
			android:layout_centerVertical="true"/>

		<ImageView
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:src="@drawable/splash"
			android:id="@+id/SplashIconStart"/>

		<CheckBox
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:gravity="center|center_vertical|center_horizontal"
			android:text="Add homescreen shortcut"
			android:layout_centerHorizontal="true"
			android:id="@+id/SplashCheckIcon"
			android:textColor="#000000"
			android:layout_below="@id/SplashIconStart"
			android:layout_marginTop="10dp"/>

	</RelativeLayout>

</RelativeLayout>

